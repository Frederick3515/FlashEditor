@import "/assets/svg/icon.wxss";
@import "./assets/iconfont.wxss";
.banner{
  position: fixed;
  top:0rpx;
  height:100rpx;
  width: 750rpx;
  box-shadow: 0 2px 15px #c4c4c4;
  z-index: 5;
  background-color: #fff;
}
.title-input{
  position: fixed;
  line-height: 50rpx;
  left:40rpx;
  top:20rpx;
  font-size: 48rpx;
  width: 500rpx;
  height: 50rpx;
}

.searchIcon{
  position: fixed;
  top:30rpx;
  right:120rpx;
  width:50rpx;
  height:50rpx;
}

.optionsIcon{
  position: fixed;
  top:25rpx;
  right:40rpx;
  width:50rpx;
  height:55rpx;
}
.ql-container{
  position:absolute;
  left:10rpx;
  top:110rpx;
  width:740rpx;
  height:1000rpx;
}
.toolsbar{
  position: fixed;
  bottom:0;
  left:0;
  width:750rpx;
  height:90rpx;
  padding:15rpx 15rpx;
  background-color: #fafafa;
  font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
  box-shadow: 0 2px 15px #c4c4c4; 
  text-align:center;
}
.iconfont {
  
  display: inline-block;
  padding: 16rpx 16rpx;
  width: 48rpx;
  height: 48rpx;
  cursor: pointer;
  font-size: 40rpx;
  vertical-align: middle;
}

.ql-active {
  color: #06c;
}
.bar-active{
  background-color: #e9e9e9
}
.subbar{
  display: inline-block;
  position: fixed;
  height:80rpx;
  width: 240rpx;
  bottom:120rpx;
  background-color: #e9e9e9;
  border-radius: 3px;
}
.textbar{
  left:30rpx;
}
.linebar{
  left:60rpx;
}