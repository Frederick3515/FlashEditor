/**index.wxss**/
.addButton{
  position: fixed;
  height: 55px;
  width: 55px;
  right: 40rpx;
  bottom: 40rpx;
  border-radius:50%;
  background-color:#707070 ;
  box-shadow: 2px 2px 2px #dddddd;
  outline: 10px solid;
  outline-offset: -39px;
  outline-color: #fff;
  outline-width: 13px;
}
.banner{
  position: fixed;
  top:0rpx;
  height:100rpx;
  width: 750rpx;
  box-shadow: 0 2px 15px #c4c4c4;
  z-index: 5;
  background-color: #fff;
}
.userinfo-avatar{
  overflow: hidden;
  position: fixed;
  left:40rpx;
  top:2rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  border: 2px solid rgba(230, 230, 230, 0.37);
  box-shadow: 3px 3px 10px rgba(0,0,0,0.2);
}
.userinfo-nickname{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 22px;
  padding-top: 20rpx;

}
.searchIcon{
  position: fixed;
  top:40rpx;
  right:130rpx;
  width:25rpx;
  height:25rpx;
  border-radius: 100%;
  background-color: none;
  border: 2px solid #707070;
}
.searchIcon::after{
  content:'';
  transform: rotate(45deg);
  width:8px;
  height:2px;
  position: absolute;
  top:25rpx;
  left:20rpx;
  background-color: #707070;
}
.searchButton{
  position: fixed;
  top:28rpx;
  right: 110rpx;
  width: 30px;
  height: 30px;
  border-radius: 0;
}
.searchButton::after{
  border:none;
  background-color: #fff;
  border-radius: 0; 
}
.optionsIcon{
  position: fixed;
  display:flex;
  flex-direction: column;
  justify-content: space-between;
  top:38rpx;
  right:35rpx;
  width:15px;
  height:20px;
}
.dots{
  width:5px;
  height:5px;
  background-color:#707070;
  border-radius:100%;
}
.optionsButton{
  position: fixed;
  top:28rpx;
  right:30rpx;
  width:25px;
  height:30px;
  border-radius: 0;
}
.optionsButton::after{
  border:none;
  background-color: #fff;
  border-radius: 0; 
}
.gapSection{
  position:fixed;
  width:750rpx;
  height:15rpx;
  background-color: #ececec;
  border-bottom:1px solid #cecececb;
  top:100rpx;
  z-index: 1;
}
.fileList{
  position: absolute;
  display: flex;
  flex-direction: column;
  top:100rpx;
  padding-top:60rpx;
  width: 750rpx;
}

.fileInfo{
  height: 150rpx;
  padding: 0px 60rpx;
  font-size: 22px;
  vertical-align:middle;
}
.fileInfoTitle{
  margin-left:40rpx;
}

.divLine{
  margin-top:30rpx;
  width: 100%;
  height: 1px;
  background-color: #d4d4d4;
}