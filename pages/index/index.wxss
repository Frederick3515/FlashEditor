/**index.wxss**/
@import "/assets/svg/icon.wxss";
.addButton{
  position: fixed;
  height: 120rpx;
  width: 120rpx;
  right: 40rpx;
  bottom: 40rpx;
  border-radius: 100%;
  background-color: white;
  border:none;
  
}
.banner{
  position: fixed;
  top:0rpx;
  height:100rpx;
  width: 750rpx;
  box-shadow: 0 2px 15px #c4c4c4;
  z-index: 5;
  background-color: #fff;
}
.userinfo-avatar{
  overflow: hidden;
  position: fixed;
  left:60rpx;
  top:2rpx;
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  border: 2px solid rgba(201, 201, 201, 0.575);
}
.userinfo-nickname{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  padding-top: 20rpx;

}
.searchIcon{
  position: fixed;
  top:30rpx;
  right:120rpx;
  width:50rpx;
  height:50rpx;
}

.optionsIcon{
  position: fixed;
  top:25rpx;
  right:40rpx;
  width:50rpx;
  height:55rpx;
}
.gapSection{
  position:fixed;
  width:750rpx;
  height:15rpx;
  background-color: #ececec;
  border-bottom:1px solid #cecececb;
  top:100rpx;
  z-index: 1;
}
.fileList{
  position: absolute;
  display: flex;
  flex-direction: column;
  top:100rpx;
  padding-top:60rpx;
  width: 750rpx;
}

.fileInfo{
  position:relative;
  height: 150rpx;
  padding: 0px 60rpx;
  font-size: 22px;
  vertical-align:middle;
  
}
.fileInfoTitle{
  margin-left:40rpx;
  display: block;
  width: 400rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}

.divLine{
  margin-top:30rpx;
  width: 100%;
  height: 1px;
  background-color: #d4d4d4;
}

.noFileText{
  display: flex;
  justify-content: center;
  font-size: 50rpx;
  color: #d4d4d4;
}

.fileTypeSelector{
  
}

.block{
  position:fixed;
  top:0;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(184, 184, 184, 0.438);
}

.typeSelector{
  position:fixed;
  left:0;
  right:0;
  bottom:0;
  height:250rpx;
  background-color: white;
}

.textIcon{
  position:absolute;
  width:80rpx;
  height: 66rpx;
  left:170rpx;
  top:70rpx;
}
.textIconText{
  position: relative;
  top: 100rpx;
  font-size: 40rpx;
}
.alphaIcon{
  position:absolute;
  width:80rpx;
  height:80rpx;
  left:490rpx;
  top:70rpx;
}
.alphaIconText{
  position: relative;
  top: 100rpx;
  font-size: 40rpx;
}